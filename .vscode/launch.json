    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flasker",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--no-debugger",
                //"--no-reload"
                "--debug",
                "--reload"
            ],
            "jinja": true
        }
    ]
}